# order += "memory"
order += "disk /"
# order += "read_file uptime"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "load"
order += "tztime local"
order += "volume master"

cpu_usage {
        format = "CPU %usage"
        max_threshold = 75
}

